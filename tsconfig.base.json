{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2020"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "auth/*": [
                "packages/auth/src/*"
            ],
            "storage/*": [
                "packages/storage/src/*"
            ],
            "shared/*": [
                "packages/shared/src/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}